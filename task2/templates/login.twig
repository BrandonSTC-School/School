{% extends "base.twig" %}
{% block title %}Login - AstroGallery{% endblock %}

{% block content %}
<div class="auth-card">
    <h2>Login</h2>

    {% if error %}<p class="error">{{ error }}</p>{% endif %}
    {% if success %}<p class="success">{{ success }}</p>{% endif %}

    <form method="POST" action="/task2/phps/login.php">
        <input type="email" name="eMail" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <div class="auth-links">
        <a href="/task2/phps/forgot.php" class="btn btn-secondary">Forgot Password?</a>
        <a href="/task2/phps/signup.php" class="btn btn-secondary">Sign Up</a>
    </div>
</div>
{% endblock %}